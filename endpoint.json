{
    "label": "PandaDoc",
    "name": "pandadoc",
    "apiVersion": "v1",
    "internal": false,
    "configurationType": "GLOBAL",
    "deployment": {
        "profiles":[
            {
                "name": "default",
                "label": "Default",
                "memory": 256,
                "description": "Default configuration"
            }
        ],
        "allowMultipleInstances": true
    },
    "icon48": "https://storage.googleapis.com/static.slingrs.io/platform/endpoints/pandadoc.png",
    "configurationHelpUrl": "/endpoints_pandadoc.html#configuration",
    "status": "ACTIVE",
    "stores": [],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Event triggered when there is a webhook coming from PandaDoc."
        }
    ],
    "functions": [
        {
            "label": "GET",
            "name": "_get"
        },
        {
            "label": "POST",
            "name": "_post"
        }
    ],
    "scripts":[
        "functions.js"
    ],
    "configuration":[
        {
            "name": "authenticationMethod",
            "label": "Authentication Method",
            "required": true,
            "defaultValue": "oAuth2",
            "type": "buttonsGroup",
            "typeOptions": {
                "allowCustom": false,
                "possibleValues":[
                    {
                        "label":"API Key",
                        "name":"apiKey"
                    },
                    {
                        "label":"OAuth 2.0",
                        "name":"oAuth2"
                    }
                ]
            }
        },
        {
            "name": "apiKey",
            "label": "API Key",
            "type": "text",
            "required": true,
            "visible": "@config.authenticationMethod == 'apiKey'"
        },
        {
            "name": "clientId",
            "label": "Client ID",
            "type": "text",
            "required": true,
            "visible": "@config.authenticationMethod == 'oAuth2'"
        },
        {
            "name": "clientSecret",
            "label": "Client secret",
            "type": "text",
            "required": true,
            "visible": "@config.authenticationMethod == 'oAuth2'"
        },
        {
            "name": "requestToken",
            "label": "Request token",
            "type": "oauth2",
            "visible": "@config.authenticationMethod == 'oAuth2'",
            "typeOptions": {
                "clientId": "config.clientId",
                "clientSecret": "config.clientSecret",
                "authUrl": "'https://app.pandadoc.com/oauth2/authorize'",
                "accessTokenUrl": "'https://api.pandadoc.com/oauth2/access_token'",
                "scope": "'read+write'",
                "grantType": "'authorization_code'",
                "accessToken": "@config.accessToken",
                "refreshToken": "@config.refreshToken"
            }
        },
        {
            "name": "accessToken",
            "label": "Access token",
            "type": "text",
            "visible": "@config.authenticationMethod == 'oAuth2'"
        },
        {
            "name": "refreshToken",
            "label": "Refresh token",
            "type": "text",
            "visible": "@config.authenticationMethod == 'oAuth2'"
        },
        {
            "name": "webhooksSharedKey",
            "label": "Webhooks shared key",
            "type": "text",
            "required": false
        },
        {
            "name": "webhook",
            "label": "Webhook URL",
            "type": "label",
            "value": "config.WEBHOOK_URL"
        }
    ]
}
